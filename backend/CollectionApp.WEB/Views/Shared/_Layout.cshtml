<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <script src="~/lib/js-cookie/js.cookie.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="~/img/icon.svg" width="30" height="30" alt="">
                Collections
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarToggler">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                Sign in / Sign up
                            </a>
                        }
                        else
                        {
                            @if (ViewContext.ActionDescriptor.AttributeRouteInfo?.Name == "Profile")
                            {
                                <a class="nav-link d-inline" asp-controller="Collection" asp-action="Create">
                                    Add collection
                                </a>
                            }
                            else
                            {
                                <a class="nav-link d-inline" asp-controller="Collection" asp-action="Index">Profile</a>
                            }
                            <a class="nav-link d-inline" asp-controller="Account" asp-action="Logout">Logout</a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Sign in / Sign up</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div id="modalContent" class="modal-body d-flex flex-column">
                    <a class="btn btn-primary w-75 mt-1 mx-auto oauth-btn"
                       asp-controller="Account"
                       asp-action="SetLogin"
                       asp-route-provider="Facebook">
                        <i class="bi bi-facebook"></i>
                        Facebook
                    </a>
                    <a class="btn btn-danger w-75 my-1 mx-auto oauth-btn"
                       asp-controller="Account"
                       asp-action="SetLogin"
                       asp-route-provider="Reddit">
                        <i class="bi bi-reddit"></i>
                        Reddit
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js"></script>
</body>
</html>
