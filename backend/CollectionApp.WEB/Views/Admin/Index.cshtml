@{ 
    Layout = "_Layout";
}

<div class="table-responsive">
    <table class="table mt-2">
        <thead>
            <tr class="d-flex">
                <th class="col-5">Username</th>
                <th class="col-5">Email</th>
                <th class="col-2"></th>
            </tr>
        </thead>
        <tbody>
            <tr class="d-flex">
                <th class="col-5">
                    <a>
                        Username
                    </a>
                </th>
                <td class="col-5">Email</td>
                <td class="col-2">
                    <form asp-controller="Item"
                          asp-action="Delete"
                          class="d-inline">
                        <button class="btn btn-success btn-sm m-1"
                                type="submit"
                                data-toggle="tooltip"
                                data-placement="bottom"
                                title="Delete">
                            <i class="bi bi-star"></i>
                        </button>
                    </form>
                    <form asp-controller="Item"
                          asp-action="Delete"
                          class="d-inline">
                        <button class="btn btn-warning btn-sm m-1"
                                type="submit"
                                data-toggle="tooltip"
                                data-placement="bottom"
                                title="Block">
                            <i class="bi bi-lock"></i>
                        </button>
                    </form>
                    <form asp-controller="Item"
                          asp-action="Delete"
                          class="d-inline">
                        <button class="btn btn-danger btn-sm m-1"
                                type="submit"
                                data-toggle="tooltip"
                                data-placement="bottom"
                                title="Delete">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>